{
  "name": "@braintrust/lingua",
  "version": "0.1.0",
  "description": "TypeScript bindings for Lingua - Universal message format for LLM APIs",
  "scripts": {
    "build": "rm -rf dist && pnpm run build:wasm && pnpm run build:types",
    "build:wasm": "pnpm run build:wasm:bundler && pnpm run build:wasm:nodejs && pnpm run build:wasm:web",
    "build:wasm:bundler": "cd ../.. && wasm-pack build --target bundler --release --out-dir bindings/typescript/dist/bundler --no-pack",
    "build:wasm:nodejs": "cd ../.. && wasm-pack build --target nodejs --release --out-dir bindings/typescript/dist/nodejs --no-pack",
    "build:wasm:web": "cd ../.. && wasm-pack build --target web --release --out-dir bindings/typescript/dist/web --no-pack",
    "build:types": "tsup",
    "generate": "cd ../.. && cargo test --features ts-rs/export",
    "test": "vitest",
    "test:run": "pnpm build && vitest run",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "pnpm run build"
  },
  "files": [
    "dist/bundler/lingua_bg.wasm",
    "dist/bundler/lingua.js",
    "dist/bundler/lingua_bg.js",
    "dist/bundler/lingua.d.ts",
    "dist/nodejs/lingua_bg.wasm",
    "dist/nodejs/lingua.js",
    "dist/nodejs/lingua.d.ts",
    "dist/web/lingua_bg.wasm",
    "dist/web/lingua.js",
    "dist/web/lingua_bg.js",
    "dist/web/lingua.d.ts",
    "dist/types",
    "src"
  ],
  "main": "dist/nodejs/lingua.js",
  "module": "dist/bundler/lingua.js",
  "browser": "dist/web/lingua.js",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "node": "./dist/nodejs/lingua.js",
      "import": "./dist/bundler/lingua.js",
      "default": "./dist/nodejs/lingua.js"
    },
    "./browser": {
      "types": "./dist/types/index.browser.d.ts",
      "import": "./dist/web/lingua.js",
      "default": "./dist/web/lingua.js"
    },
    "./browser/lingua_bg.wasm": "./dist/web/lingua_bg.wasm"
  },
  "sideEffects": [
    "./dist/bundler/lingua.js",
    "./dist/nodejs/lingua.js",
    "./dist/web/lingua.js"
  ],
  "keywords": [
    "llm",
    "ai",
    "openai",
    "anthropic",
    "typescript",
    "bindings"
  ],
  "license": "MIT",
  "devDependencies": {
    "@anthropic-ai/sdk": "^0.63.0",
    "@types/node": "^22.9.0",
    "dotenv-cli": "^10.0.0",
    "openai": "^5.22.0",
    "tsup": "^8.5.0",
    "typescript": "^5.6.3",
    "vitest": "^1.3.1"
  },
  "peerDependencies": {
    "@anthropic-ai/sdk": "^0.63.0",
    "openai": "^5.22.0"
  }
}
