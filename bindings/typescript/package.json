{
  "name": "@braintrust/lingua",
  "version": "0.1.0",
  "description": "TypeScript bindings for Lingua - Universal message format for LLM APIs",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "pnpm run build:wasm && tsc",
    "build:wasm": "cd ../.. && wasm-pack build --target nodejs --release --out-dir bindings/typescript/wasm --no-pack",
    "generate": "cd ../.. && cargo test --features ts-rs/export",
    "test": "vitest",
    "test:run": "vitest run",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "pnpm run build"
  },
  "files": [
    "dist",
    "src",
    "wasm"
  ],
  "keywords": [
    "llm",
    "ai",
    "openai",
    "anthropic",
    "typescript",
    "bindings"
  ],
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "@anthropic-ai/sdk": "^0.63.0",
    "@types/node": "^22.9.0",
    "openai": "^5.22.0",
    "typescript": "^5.6.3",
    "vitest": "^1.3.1"
  },
  "peerDependencies": {
    "@anthropic-ai/sdk": "^0.63.0",
    "openai": "^5.22.0"
  }
}

