{
  "name": "@braintrust/lingua",
  "version": "0.1.0",
  "description": "TypeScript bindings for Lingua - Universal message format for LLM APIs",
  "scripts": {
    "build": "rm -rf dist && tsup",
    "generate": "cd ../.. && cargo test --features ts-rs/export",
    "test": "vitest",
    "test:run": "pnpm build && vitest run",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "pnpm run build"
  },
  "files": [
    "dist"
  ],
  "module": "dist/index.mjs",
  "browser": "dist/index.browser.mjs",
  "types": "dist/index.d.mts",
  "exports": {
    ".": {
      "types": "./dist/index.d.mts",
      "browser": "./dist/index.browser.mjs",
      "import": "./dist/index.mjs",
      "default": "./dist/index.mjs"
    },
    "./node": {
      "types": "./dist/index.d.mts",
      "import": "./dist/index.mjs",
      "default": "./dist/index.mjs"
    },
    "./browser": {
      "types": "./dist/index.browser.d.mts",
      "import": "./dist/index.browser.mjs",
      "default": "./dist/index.browser.mjs"
    }
  },
  "sideEffects": [
    "./dist/index.mjs",
    "./dist/index.browser.mjs"
  ],
  "keywords": [
    "llm",
    "ai",
    "openai",
    "anthropic",
    "typescript",
    "bindings"
  ],
  "license": "MIT",
  "dependencies": {
    "@braintrust/lingua-wasm": "workspace:*"
  },
  "devDependencies": {
    "@anthropic-ai/sdk": "^0.63.0",
    "@types/node": "^22.9.0",
    "dotenv-cli": "^10.0.0",
    "openai": "^5.22.0",
    "tsup": "^8.5.0",
    "typescript": "^5.6.3",
    "vite-plugin-top-level-await": "^1.6.0",
    "vite-plugin-wasm": "^3.5.0",
    "vitest": "^1.3.1"
  },
  "peerDependencies": {
    "@anthropic-ai/sdk": "^0.63.0",
    "openai": "^5.22.0"
  }
}
