{
  "name": "@braintrust/lingua",
  "version": "0.1.0",
  "description": "TypeScript bindings for Lingua - Universal message format for LLM APIs",
  "scripts": {
    "build": "rm -rf dist && pnpm run build:wasm && pnpm run build:ts && pnpm run build:copy-wasm",
    "build:wasm": "pnpm run build:wasm:bundler && pnpm run build:wasm:nodejs && pnpm run build:wasm:web",
    "build:wasm:bundler": "cd ../.. && wasm-pack build --target bundler --release --out-dir bindings/typescript/wasm/bundler --no-pack",
    "build:wasm:nodejs": "cd ../.. && wasm-pack build --target nodejs --release --out-dir bindings/typescript/wasm/nodejs --no-pack",
    "build:wasm:web": "cd ../.. && wasm-pack build --target web --release --out-dir bindings/typescript/wasm/web --no-pack",
    "build:ts": "tsup",
    "build:copy-wasm": "mkdir -p dist/wasm && cp -r wasm/bundler dist/wasm/ && cp -r wasm/nodejs dist/wasm/ && cp -r wasm/web dist/wasm/",
    "generate": "cd ../.. && cargo test --features ts-rs/export",
    "test": "vitest",
    "test:run": "pnpm build && vitest run",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "pnpm run build"
  },
  "files": [
    "dist",
    "wasm"
  ],
  "main": "dist/index.js",
  "module": "dist/index.js",
  "browser": "dist/index.browser.js",
  "types": "dist/index.d.mts",
  "exports": {
    ".": {
      "types": "./dist/index.d.mts",
      "node": "./dist/index.js",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./browser": {
      "types": "./dist/index.browser.d.mts",
      "import": "./dist/index.browser.js",
      "default": "./dist/index.browser.js"
    },
    "./browser/lingua_bg.wasm": "./wasm/web/lingua_bg.wasm"
  },
  "sideEffects": [
    "./dist/index.js",
    "./dist/index.browser.js"
  ],
  "keywords": [
    "llm",
    "ai",
    "openai",
    "anthropic",
    "typescript",
    "bindings"
  ],
  "license": "MIT",
  "devDependencies": {
    "@anthropic-ai/sdk": "^0.63.0",
    "@types/node": "^22.9.0",
    "dotenv-cli": "^10.0.0",
    "openai": "^5.22.0",
    "tsup": "^8.5.0",
    "typescript": "^5.6.3",
    "vite-plugin-top-level-await": "^1.6.0",
    "vite-plugin-wasm": "^3.5.0",
    "vitest": "^1.3.1"
  },
  "peerDependencies": {
    "@anthropic-ai/sdk": "^0.63.0",
    "openai": "^5.22.0"
  }
}
