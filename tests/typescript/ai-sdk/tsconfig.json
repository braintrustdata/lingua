{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext", 
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "outDir": "./dist",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@elmir/types": ["../../../bindings/typescript"]
    }
  },
  "include": [
    "*.ts",
    "../../../bindings/typescript/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}