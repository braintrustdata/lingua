#!/bin/bash

# Pre-commit hook for LLMIR project
# Runs cargo fmt and clippy to ensure code quality

set -e

echo "ğŸ” Running pre-commit checks..."

# Check if we're in a Rust project
if [ ! -f "Cargo.toml" ]; then
    echo "âŒ No Cargo.toml found, skipping Rust checks"
    exit 0
fi

# Run cargo fmt to fix formatting
echo "ğŸ“ Formatting code with cargo fmt..."
cargo fmt --all
echo "âœ… Code formatted"

# Run clippy for linting and auto-fix
echo "ğŸ”§ Running clippy with auto-fix..."
cargo clippy --fix --allow-dirty --all-targets --all-features -- -D warnings
echo "âœ… Clippy auto-fix completed"

# Run clippy again to check for remaining issues
echo "ğŸ” Checking for remaining clippy issues..."
if ! cargo clippy --all-targets --all-features -- -D warnings; then
    echo "âŒ Clippy found issues that couldn't be auto-fixed!"
    echo "ğŸ’¡ Please review and fix the remaining issues manually"
    exit 1
fi
echo "âœ… Clippy checks passed"

echo "ğŸ‰ All pre-commit checks passed!"