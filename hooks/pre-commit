#!/bin/bash

# Pre-commit hook for LLMIR project
# Runs cargo fmt and clippy to ensure code quality

set -e

echo "ğŸ” Running pre-commit checks..."

# Check if we're in a Rust project
if [ ! -f "Cargo.toml" ]; then
    echo "âŒ No Cargo.toml found, skipping Rust checks"
    exit 0
fi

# Run cargo fmt to check formatting
echo "ğŸ“ Checking code formatting with cargo fmt..."
if ! cargo fmt --all -- --check; then
    echo "âŒ Code formatting issues found!"
    echo "ğŸ’¡ Run 'cargo fmt' to fix formatting issues"
    exit 1
fi
echo "âœ… Code formatting is correct"

# Run clippy for linting
echo "ğŸ”§ Running clippy for linting..."
if ! cargo clippy --all-targets --all-features -- -D warnings; then
    echo "âŒ Clippy found issues that need to be fixed!"
    echo "ğŸ’¡ Run 'cargo clippy --fix' to automatically fix some issues"
    exit 1
fi
echo "âœ… Clippy checks passed"

echo "ğŸ‰ All pre-commit checks passed!"