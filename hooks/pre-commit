#!/bin/bash

# Pre-commit hook for LLMIR project
# Fails if code needs formatting or clippy fixes

set -e

echo "ğŸ” Running pre-commit checks..."

# Check if we're in a Rust project
if [ ! -f "Cargo.toml" ]; then
    echo "âŒ No Cargo.toml found, skipping Rust checks"
    exit 0
fi

# Check if clippy has any suggestions
echo "ğŸ”§ Checking clippy..."
if ! cargo clippy --all-targets --all-features -- -D warnings; then
    echo "âŒ Clippy found issues. Run 'cargo clippy --fix' to fix them."
    exit 1
fi

# Check if code is already formatted
echo "ğŸ“ Checking code formatting..."
if ! cargo fmt --all -- --check; then
    echo "âŒ Code is not formatted properly."
    echo "ğŸ’¡ Run 'cargo fmt' to fix formatting, then commit again."
    exit 1
fi

echo "âœ… All checks passed!"