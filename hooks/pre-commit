#!/bin/bash

# Pre-commit hook for LLMIR project
# Runs cargo fmt to ensure consistent formatting

set -e

echo "ğŸ” Running pre-commit checks..."

# Check if we're in a Rust project
if [ ! -f "Cargo.toml" ]; then
    echo "âŒ No Cargo.toml found, skipping Rust checks"
    exit 0
fi

# Run cargo fmt to fix formatting
echo "ğŸ“ Formatting code with cargo fmt..."
cargo fmt --all
echo "âœ… Code formatted"


echo "ğŸ‰ All pre-commit checks passed!"